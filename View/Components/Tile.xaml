<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TronDuel.View.Components.Tile"
             xmlns:viewmodel="clr-namespace:TronDuel.ViewModel"
             x:DataType="{x:Type viewmodel:TileViewModel}">
    <Border Stroke="{Binding BorderColor}" Background="{Binding BackgroundColor}">
        <Image IsVisible="{Binding Visible}" Source="motor.png" Rotation="{Binding Angle}"/>
    </Border>
</ContentView>
